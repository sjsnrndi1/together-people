<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace = "jung.spring.mybatis.BoardJoinUserMapper">
		<resultMap type = "jung.spring.vo.BoardJoinUserInfoVO" id = "BoardJoinUserResultMap">			
			<result property = "boardJoinNumber" column = "BOARDJOINNUMBER"/>
			<result property = "boardJoinUser_id" column = "BOARDJOINUSER_ID"/>
			<result property = "boardJoinUser_name" column = "BOARDJOINUSER_NAME"/>
			<result property = "boardNumber" column = "BOARDNUMBER"/>
			<result property = "boardJoinUserCheck" column = "BOARDJOINUSERCHECK"/>
			<result property = "chatJoinCheck" column = "CHATJOINCHECK"/>
		</resultMap>
		
		<insert id = "sendBoardJoin">
			INSERT INTO boardJoinUserInfo VALUES(boardJoinNumber_seq.nextval, #{boardJoinUser_id}, #{boardJoinUser_name}, #{boardNumber}, #{boardJoinUserCheck}, #{chatJoinCheck})
		</insert>
		
		<select id = "getBoardJoinUsers" resultType = "jung.spring.vo.BoardJoinUserInfoVO">
			SELECT * FROM boardJoinUserInfo
		</select>
		
		<select id = "getBoardJoinUser" resultType = "jung.spring.vo.BoardJoinUserInfoVO" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			SELECT * FROM boardJoinUserInfo WHERE boardNumber = #{boardNumber} AND boardJoinUser_id = #{boardJoinUser_id}
		</select>
		
		<select id = "getJoinUsers" resultType = "jung.spring.vo.BoardJoinUserInfoVO" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			SELECT * FROM boardJoinUserInfo WHERE boardNumber = #{boardNumber} AND boardJoinUserCheck = #{boardJoinUserCheck}
		</select>
		
		<select id = "getJoinUser" resultType = "jung.spring.vo.BoardJoinUserInfoVO" parameterType = "int">
			SELECT * FROM boardJoinUserInfo WHERE boardJoinNumber = #{boardJoinNumber}
		</select>
		
		<delete id = "sendCancelBoardJoin" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			DELETE boardJoinUserInfo WHERE boardNumber = #{boardNumber} AND boardJoinUser_id = #{boardJoinUser_id}
		</delete>
		
		<update id = "modifyBoardJoinUserInfo" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			UPDATE boardJoinUserInfo SET boardJoinUserCheck = #{boardJoinUserCheck} WHERE boardJoinNumber = #{boardJoinNumber}
		</update>
		
		<update id = "modifyBoardJoinUser" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			UPDATE boardJoinUserInfo SET chatJoinCheck = #{chatJoinCheck} WHERE boardNumber = #{boardNumber} AND boardJoinUser_id = #{boardJoinUser_id}
		</update>
		
		<update id = "modifyBoardJoinUserCheck" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			UPDATE boardJoinUserInfo SET boardJoinUserCheck = #{boardJoinUserCheck} WHERE boardJoinNumber = #{boardJoinNumber}
		</update>
		
		<update id = "modifyJoinUser" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			UPDATE boardJoinUserInfo SET userReportNumber = #{userReportNumber} WHERE boardJoinNumber = #{boardJoinNumber}
		</update>
		
		<delete id = "deleteBoardJoinUserInfo" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			DELETE boardJoinUserInfo WHERE boardJoinNumber = #{boardJoinNumber}
		</delete>
		
		<delete id = "deleteBoardJoinUser" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			DELETE boardJoinUserInfo WHERE boardJoinNumber = #{boardJoinNumber} AND boardJoinUser_id = #{boardJoinUser_id}
		</delete>
		
		<delete id = "deleteBoard" parameterType = "int">
			DELETE boardJoinUserInfo WHERE boardNumber = #{boardNumber}
		</delete>
		
		<delete id = "userSecession" parameterType = "string">
			DELETE boardJoinUserInfo WHERE boardJoinUser_id = #{boardJoinUser_id}
		</delete>
	
		<delete id = "deleteUserBoardOut" parameterType = "jung.spring.vo.BoardJoinUserInfoVO">
			DELETE boardJoinUserInfo WHERE boardJoinUser_id = #{boardJoinUser_id} AND boardNumber = #{boardNumber}
		</delete>
	</mapper>